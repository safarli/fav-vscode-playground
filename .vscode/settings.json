{
  "workbench.editor.enablePreview": true,
  "workbench.startupEditor": "welcomePage",
  "workbench.iconTheme": "material-icon-theme",
  "files.eol": "\n", // LF
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.fontFamily": "'Jetbrains Mono', 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.2,
  "terminal.integrated.fontSize": 12,
  "editor.renderWhitespace": "none",
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordWrap": "on",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.bracketPairs": "active",
  "editor.quickSuggestions": {
    "strings": true,
  },
  // VIM
  "vim.useCtrlKeys": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "INFO",
    "FEATURE",
    "WARNING",
    "BUG",
    "MENTION",
    "IDEA",
    "REVIEW",
    "BOOKMARK",
    "OPTIMIZE",
    "REUSABLE",
    "TESTED",
    "CLIENT-REQUEST",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.highlightDelay": 100,
  "todo-tree.highlights.customHighlight": {
    "BOOKMARK": {
      "type": "tag",
      "foreground": "#222",
      "background": "#9c8d34",
      "gutterIcon": true,
      "icon": "bookmark",
      "iconColour": "#9c8d34"
    },
    "OPTIMIZE": {
      "type": "tag",
      "foreground": "#333",
      "background": "#72c900",
      "gutterIcon": true,
      "icon": "rocket",
      "iconColour": "#72c900"
    },
    "TESTED": {
      "type": "tag",
      "foreground": "#222",
      "background": "#7cff77",
      "gutterIcon": true,
      "iconColour": "#7cff77"
    },
    "TODO": {
      "type": "tag",
      "foreground": "#0000af",
      "background": "#cecece",
      "gutterIcon": true,
      "icon": "dash",
      "iconColour": "#cecece"
    },
    "REVIEW": {
      "type": "tag",
      "foreground": "#333",
      "background": "#00b68e",
      "gutterIcon": true,
      "icon": "eye",
      "iconColour": "#00b68e"
    },
    "FIXME": {
      "type": "tag",
      "foreground": "#fff",
      "background": "#f00",
      "iconColour": "#f00",
      "gutterIcon": true
    },
    "INFO": {
      "type": "tag",
      "foreground": "#fff",
      "background": "#3c55fa",
      "gutterIcon": true,
      "icon": "info",
      "iconColour": "#3c55fa"
    },
    "WARNING": {
      "type": "tag",
      "foreground": "#000",
      "background": "#f19c19",
      "gutterIcon": true,
      "icon": "alert",
      "iconColour": "#f19c19"
    },
    "FEATURE": {
      "type": "tag",
      "foreground": "#000",
      "background": "#ff55b8",
      "gutterIcon": true,
      "icon": "zap",
      "iconColour": "#ff55b8"
    },
    "BUG": {
      "type": "tag",
      "foreground": "#fff",
      "background": "#a435ee",
      "gutterIcon": true,
      "icon": "bug",
      "iconColour": "#a435ee"
    },
    "MENTION": {
      "type": "tag",
      "foreground": "#000",
      "background": "#00dddd",
      "gutterIcon": true,
      "icon": "mention",
      "iconColour": "#00dddd"
    },
    "IDEA": {
      "type": "tag",
      "foreground": "#000",
      "background": "#e0e001",
      "gutterIcon": true,
      "icon": "moon",
      "iconColour": "#e0e001"
    },
    "REUSABLE": {
      "type": "tag",
      "foreground": "#000",
      "background": "#f7aeae",
      "gutterIcon": true,
      "icon": "squirrel",
      "iconColour": "#f7aeae"
    },
    "CLIENT-REQUEST": {
      "type": "tag",
      "foreground": "#ddd",
      "background": "#00f",
      "gutterIcon": true,
      "icon": "person",
      "iconColour": "#00f",
    }
  },
  "todo-tree.tree.scanMode": "workspace",
  "todo-tree.general.statusBar": "current file",
  "todo-tree.highlights.enabled": true,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.buttons.scanMode": true,
}